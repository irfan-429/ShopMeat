<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CouponActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/toolbarheight"
            android:background="@color/toolbarcolor">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/ib_back"
                android:text="Apply Coupon"
                android:textColor="#fff"
                android:textSize="@dimen/toolbartitle"
                tools:ignore="SpUsage" />
        </RelativeLayout>


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_rec_trans"
                android:hint="Enter Coupon Code (if any)"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="#000"
                android:textSize="@dimen/small"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_apply_coupon"
                android:textColor="@color/orange"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Apply"
                android:textSize="@dimen/medium"/>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:id="@+id/tv_total_amt"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/small"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupon Discount"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:id="@+id/tv_coupon_discount"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/small"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charges"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:id="@+id/tv_delivery_changes"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/small"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To be paid"
                        android:textStyle="bold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:id="@+id/tv_to_be_paid"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/small"/>


                </RelativeLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_checkout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_rec_rounded"
        android:textSize="@dimen/medium"
        tools:ignore="SpUsage" >

        <LinearLayout
            android:id="@+id/ll_btm_chkout"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To be paid"
                android:textSize="@dimen/tiny"/>

            <TextView
                android:id="@+id/tv_to_be_paid_btm"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/small"/>

        </LinearLayout>

        <View
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/ll_btm_chkout"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/next_arrow"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECKOUT"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="@dimen/medium"/>

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next_arrow"
            android:tint="@color/white"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>


</RelativeLayout>